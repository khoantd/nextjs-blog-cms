generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id                        Int      @id @default(autoincrement())
  title                     String?
  subtitle                  String?
  status                    String?
  markdown                  String?
  markdownAiRevision        String?   @map("markdown_ai_revision")
  createdAt                 DateTime @default(now()) @map("created_at")
  aiPublishingRecommendations String? @map("ai_publishing_recommendations")

  @@map("blog_posts")
}

model Workflow {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now()) @map("created_at")
  workflow    Json
  enabled     Boolean  @default(false)
  trigger     String?
  description String?
  name        String?

  @@map("workflows")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  name          String?
  image         String?
  role          String    @default("viewer") // viewer, editor, admin
  emailVerified DateTime? @map("email_verified")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int     @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique @map("session_token")
  userId       Int      @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model StockAnalysis {
  id                        Int      @id @default(autoincrement())
  symbol                    String   // Stock symbol (e.g., SNAP, AAPL)
  name                      String?  // Company name
  csvFilePath               String?  @map("csv_file_path") // Path to uploaded CSV
  status                    String?  // draft, analyzing, completed
  analysisResults           String?  @map("analysis_results") // JSON string with results
  aiInsights                String?  @map("ai_insights") // AI-generated insights
  createdAt                 DateTime @default(now()) @map("created_at")
  updatedAt                 DateTime @updatedAt @map("updated_at")
  minPctChange              Float    @default(4.0) @map("min_pct_change") // Threshold percentage

  // Relations
  dailyFactorData           DailyFactorData[]
  dailyScores               DailyScore[]
  factorTables              FactorTable[]

  @@map("stock_analyses")
}

model DailyFactorData {
  id            Int      @id @default(autoincrement())
  stockAnalysisId Int     @map("stock_analysis_id")
  date          String   // ISO date string (YYYY-MM-DD)
  close         Float    // Closing price
  open          Float?   // Opening price
  high          Float?   // High price
  low           Float?   // Low price
  volume        Int?     // Trading volume
  pctChange     Float?   @map("pct_change") // Percentage change
  
  // Technical indicators
  ma20          Float?   // 20-day moving average
  ma50          Float?   // 50-day moving average
  ma200         Float?   // 200-day moving average
  rsi           Float?   // Relative Strength Index
  
  // Factor flags
  volumeSpike   Boolean  @default(false) @map("volume_spike")
  marketUp      Boolean? @map("market_up")
  sectorUp      Boolean? @map("sector_up")
  earningsWindow Boolean? @map("earnings_window")
  breakMa50     Boolean  @default(false) @map("break_ma50")
  breakMa200    Boolean  @default(false) @map("break_ma200")
  rsiOver60     Boolean  @default(false) @map("rsi_over_60")
  newsPositive  Boolean? @map("news_positive")
  shortCovering Boolean? @map("short_covering")
  macroTailwind Boolean? @map("macro_tailwind")
  
  createdAt     DateTime @default(now()) @map("created_at")
  
  stockAnalysis StockAnalysis @relation(fields: [stockAnalysisId], references: [id], onDelete: Cascade)

  @@unique([stockAnalysisId, date])
  @@map("daily_factor_data")
}

model DailyScore {
  id              Int      @id @default(autoincrement())
  stockAnalysisId Int     @map("stock_analysis_id")
  date            String   // ISO date string (YYYY-MM-DD)
  score           Float    // Daily score (0.0 - 1.0)
  factorCount     Int      @map("factor_count") // Number of active factors
  aboveThreshold  Boolean  @default(false) @map("above_threshold")
  
  // Score breakdown (JSON)
  breakdown       String?  // JSON string with factor contributions
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  stockAnalysis   StockAnalysis @relation(fields: [stockAnalysisId], references: [id], onDelete: Cascade)

  @@unique([stockAnalysisId, date])
  @@map("daily_scores")
}

model FactorTable {
  id              Int      @id @default(autoincrement())
  stockAnalysisId Int     @map("stock_analysis_id")
  transactionId   Int     @map("transaction_id") // Transaction number (Tx)
  date            String   // ISO date string (YYYY-MM-DD)
  
  // Factor data as JSON to store all factor values
  factorData      String   @map("factor_data") // JSON string with factor values
  
  // Metadata
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  stockAnalysis   StockAnalysis @relation(fields: [stockAnalysisId], references: [id], onDelete: Cascade)

  @@unique([stockAnalysisId, transactionId])
  @@index([stockAnalysisId])
  @@map("factor_tables")
}

model EarningsData {
  id              Int      @id @default(autoincrement())
  symbol          String
  company         String?
  earningsDate    DateTime @map("earnings_date")
  reportType      String   // "quarterly", "annual"
  expectedEPS     Float?   @map("expected_eps")
  actualEPS       Float?   @map("actual_eps")
  surprise        Float?   // (actual - expected) / expected
  revenue         Float?
  expectedRevenue Float?   @map("expected_revenue")
  
  // AI-generated insights
  aiSummary       String?  @map("ai_summary")
  aiSentiment     String?  // "positive", "negative", "neutral"
  aiKeyPoints     String?  // JSON array of key points
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@unique([symbol, earningsDate])
  @@map("earnings_data")
}
